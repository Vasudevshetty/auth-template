# Server Configuration
PORT=3000
API_PREFIX=/api/v1
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/auth-template

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=1h
REFRESH_SECRET=change-this-to-another-secure-random-string-in-production
REFRESH_EXPIRES_IN=7d

# Email Configuration (for password reset)
EMAIL_FROM=noreply@example.com
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email-user
EMAIL_PASS=your-email-password

# OAuth Configuration
# Set to 'true' to enable respective OAuth provider
ENABLE_GITHUB=false
ENABLE_GOOGLE=false
ENABLE_FACEBOOK=false

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/v1/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback